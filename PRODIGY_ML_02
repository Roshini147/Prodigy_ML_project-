      "source": [
        "<a href=\"https://colab.research.google.com/github/Roshini147/Prodigy_ML_project-/blob/main/customer_kmeans_clustering.ipynb\" target=\"_parent\"><img src=\"https://colab.research.google.com/assets/colab-badge.svg\" alt=\"Open In Colab\"/></a>"
