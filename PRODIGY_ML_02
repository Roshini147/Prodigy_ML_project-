    {
      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "import matplotlib.pyplot as plt\n",
        "import seaborn as sns\n",
        "from sklearn.cluster import KMeans\n",
        "from sklearn.preprocessing import StandardScaler\n",
        "\n",
        "sns.set_style(\"whitegrid\")\n",
        "plt.rcParams[\"figure.figsize\"] = (10,6)\n",
        "\n",
        "np.random.seed(42)\n",
        "\n",
        "n_customers = 100\n",
        "\n",
        "data = pd.DataFrame({\n",
        "    'CustomerID': range(1, n_customers+1),\n",
        "    'Annual_Spend': np.random.randint(1000, 50000, n_customers),\n",
        "    'Frequency': np.random.randint(1, 50, n_customers),\n",
        "    'Avg_Transaction': np.random.randint(50, 2000, n_customers)\n",
        "})\n",
        "\n",
        "print(\"Sample Customer Data:\")\n",
        "print(data.head())\n",
        "\n",
        "plt.figure(figsize=(10,5))\n",
        "plt.bar(data['CustomerID'][:10], data['Annual_Spend'][:10], color='teal')\n",
        "plt.xlabel('Customer ID')\n",
        "plt.ylabel('Annual Spend')\n",
        "plt.title('Annual Spend of First 10 Customers')\n",
        "plt.show()\n",
        "\n",
        "plt.figure(figsize=(10,5))\n",
        "plt.plot(data['CustomerID'][:10], data['Frequency'][:10], marker='o', color='orange')\n",
        "plt.xlabel('Customer ID')\n",
        "plt.ylabel('Purchase Frequency')\n",
        "plt.title('Purchase Frequency of First 10 Customers')\n",
        "plt.show()\n",
        "\n",
        "X = data[['Annual_Spend', 'Frequency', 'Avg_Transaction']]\n",
        "\n",
        "scaler = StandardScaler()\n",
        "X_scaled = scaler.fit_transform(X)\n",
        "\n",
        "wcss = []\n",
        "for k in range(1, 11):\n",
        "    kmeans = KMeans(n_clusters=k, random_state=42, n_init=10)\n",
        "    kmeans.fit(X_scaled)\n",
        "    wcss.append(kmeans.inertia_)\n",
        "\n",
        "plt.figure(figsize=(8,5))\n",
        "plt.plot(range(1,11), wcss, marker='o', linestyle='--', color='b')\n",
        "plt.xlabel('Number of clusters')\n",
        "plt.ylabel('WCSS (Within Cluster Sum of Squares)')\n",
        "plt.title('Elbow Method to Determine Optimal Clusters')\n",
        "plt.show()\n",
        "\n",
        "kmeans = KMeans(n_clusters=3, random_state=42, n_init=10)\n",
        "clusters = kmeans.fit_predict(X_scaled)\n",
        "\n",
        "data['Cluster'] = clusters\n",
        "\n",
        "print(\"\\nClustered Customer Data:\")\n",
        "print(data.head(10))\n",
        "\n",
        "\n",
        "plt.figure(figsize=(10,6))\n",
        "sns.scatterplot(x='Annual_Spend', y='Frequency', hue='Cluster', data=data, palette='Set2', s=100)\n",
        "plt.scatter(kmeans.cluster_centers_[:,0]*X.std(axis=0)[0]+X.mean(axis=0)[0],\n",
        "            kmeans.cluster_centers_[:,1]*X.std(axis=0)[1]+X.mean(axis=0)[1],\n",
        "            s=300, c='red', marker='X', label='Centroids')\n",
        "plt.xlabel('Annual Spend')\n",
        "plt.ylabel('Frequency')\n",
        "plt.title('Customer Segments (Clusters)')\n",
        "plt.legend()\n",
        "plt.show()\n",
        "\n",
        "\n",
        "cluster_summary = data.groupby('Cluster')[['Annual_Spend', 'Frequency', 'Avg_Transaction']].mean()\n",
        "cluster_summary.plot(kind='bar', color=['skyblue','lightgreen','salmon'])\n",
        "plt.title('Average Customer Metrics by Cluster')\n",
        "plt.ylabel('Average Value')\n",
        "plt.xticks(rotation=0)\n",
        "plt.show()\n"
      ],
      "metadata": {
        "id": "4FaJz0ZUtd8T"
      },
